{{!
    @template block_news_forum_slider/slider

    Display news slider

    News content json template

    {
    'general': [
        {"headline":"Headline 1", "message":"Content 1"},
        {"headline":"Headline 1", "message":"Content 2"},
        {"headline":"Headline 1", "content":"Content 3"}
    ]
}
}}

<div id="slider-container">

    <div class="slider-banner-col">
        <h3>{{title}}</h3>
    </div>

    <div class="news-slider responsive slider-col">
        {{#news}}
            <div class="d-flex">
                <div class="text-center p-2">
                    {{{userpicture}}}
                    <div class="slider-col-date font-weight-bold">{{userdayofdate}} {{userdatemodified}}</div>
                </div>
                <div class="flex-grow-1">
                    <p class="newscontent text-center">
                        <span class="headline">
                            {{{headline}}}
                        </span>
                    </p>
                    <p><span class="slider-message">{{{message}}}</span></p>
                    <p class="text-right">
                        <span><strong>{{{courseshortname}}}</strong> {{author}}</span>
                    </p>
                </div>
            </div>
        {{/news}}
    </div>

</div>
